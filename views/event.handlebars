<div class="row">
    <div class="col-auto">
        <h2> {{user.username}}!</h2> <!-- display the user's name -->
        <form action="/api/users/logout" method="post">
            <button type="submit">Logout</button>
        </form>
    </div>
</div>

{{#if events.length}}
    <div class="col-md-6 event-list">
        <h3>Upcoming Events:</h3> {{user.event}}<!-- list of upcoming events -->

        {{#each events as |event|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/event/{{event.id}}">{{event.name}}</a></h4>
                <p>{{event.name}}</p>
                <p>{{event.date}}</p>
                <p>{{event.location}}</p>
                <p>Dress Code: {{event.dress_code}}</p>
                {{#if event.theme_name}}
                <p>Theme: {{event.theme_name}}</p>
                {{/if}}
                <p>Budget: ${{event.budget}}</p>
                <p>Food: {{event.food}}</p>
                <p>Rentals: {{event.rentals}}</p>
                <p>Supplies: {{event.supplies}}</p>
                <p>Entertainment: {{event.entertainment}}</p>
            </div>

            <!-- delete button -->
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<div class="row mt-4">
        <div class="col-md-6">
            <h3>Budget Distribution</h3>
            <canvas id="myChart" style="width: 800px; height: 800px;"></canvas>
        </div>
    </div>  

<script src="./js/deleteEvent.js"></script>
<script src="./js/event.js"></script>
<script src="./js/profile.js"></script>

